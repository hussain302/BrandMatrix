@model Subscriptions
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="text-center bg-secondary">
        <h1 class="display-4 mt-2 pt-2 mb-3 text-white"> @ViewData["Title"]</h1>
        <a asp-action="Manage" class="mb-3 btn btn-success">
            Back
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="19" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
        </a>
    </div>

    <div class="card-body">
        <div class="">
            <form asp-action="DeleteOrDetails" method="post">

                <input asp-for="SubscriptionId" hidden="hidden" />

                <div class="row">
                    <div class="col-6 mb-3">
                        <label for="name" class="form-label">Organization</label>
                        <input type="text" value="@Model.OrganizationName" disabled class="form-control" id="email" placeholder="Enter OrganizationName" />
                 </div>
                    <div class="mb-3 col-6">
                        <label for="email" class="form-label">Subscription Plan</label>
                        <select disabled required asp-for="Plan" class="form-control">
                            <option value="">Select Subscription's Plan</option>
                            <option value="Premium">Premium</option>
                            <option value="Standard">Standard</option>
                            <option value="Trial">Trial</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col">
                        <label for="email" class="form-label">Duration</label>
                        <input disabled type="number" min="10" asp-for="DurationInDays" class="form-control" id="email" placeholder="Enter Subscription's Duration" required />
                    </div>

                    <div class="mb-3 col">
                        <label for="email" class="form-label">Price</label>
                        <input disabled type="number" min="10" asp-for="Price" class="form-control" id="email" placeholder="Enter Subscription's Price" required />
                    </div>
                </div>


                <div class="mb-3">
                    <label for="Website" class="form-label">Description</label>
                    <textarea disabled class="form-control" placeholder="Enter Description of subscription" asp-for="Description" id="Website" rows="2">
                    </textarea>
                </div>

                @if (ViewData["Title"] is "Delete Subscription")
                {
                    <div class="d-grid gap-2">
                        <button type="submit" class="@ViewData["button-color"] btn-block"> @ViewData["Title"] </button>
                    </div>
                }
                else
                {
                    <div class="d-grid gap-2">
                        <a asp-action="CreateOrEdit" asp-route-id="@Model.SubscriptionId" class="@ViewData["button-color"] btn-block">
                            Edit
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </a>
                    </div>
                }


            </form>
        </div>
    </div>

</div>