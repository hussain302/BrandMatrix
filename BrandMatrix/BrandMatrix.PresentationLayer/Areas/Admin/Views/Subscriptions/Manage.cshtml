@model IEnumerable<Subscriptions>
@{
    ViewData["Title"] = "Manage Subscriptions";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="">
    <div class="text-center bg-secondary">
        <h1 class="display-4 pt-2 mt-2 mb-3 text-white"> @ViewData["Title"] </h1>
        <a asp-action="CreateOrEdit" class="mb-3 btn btn-success">
            Add Subscriptions
            <svg xmlns="http://www.w3.sub/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
            </svg>
        </a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Organization</th>
                <th>Owner</th>
                <th>Plan</th>
                <th>Price</th>
                <th>Duration</th>
                <th>createdAt</th>
                <th>updatedAt</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sub in Model)
            {
                <tr>
                    <td>@sub.OrganizationName</td>
                    <td>@sub.OwnerName</td>
                    <td>@sub.Plan</td>
                    <td>@sub.Price</td>
                    <td>@sub.DurationInDays days</td>
                    <td>@sub.CreatedAt</td>
                    <td>@sub.UpdatedAt</td>
                    <td>
                        <a class="btn btn-primary" asp-action="DeleteOrDetails" asp-route-page="details" asp-route-id="@sub.SubscriptionId">
                            <svg xmlns="http://www.w3.sub/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg>
                        </a>
                        <a class="btn btn-warning" asp-action="CreateOrEdit" asp-route-id="@sub.SubscriptionId">
                            <svg xmlns="http://www.w3.sub/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </a>
                        <a class="btn btn-danger" asp-action="DeleteOrDetails" asp-route-id="@sub.SubscriptionId" asp-route-page="delete">
                            <svg xmlns="http://www.w3.sub/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
