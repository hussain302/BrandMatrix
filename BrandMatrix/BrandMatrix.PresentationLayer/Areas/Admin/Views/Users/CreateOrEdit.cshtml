@model User
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div>
    <div class="text-center bg-secondary">
        <h1 class="display-4 mt-2 pt-2 mb-3 text-white"> @ViewData["Title"] </h1>
        <a asp-action="Manage" class="mb-3 btn btn-success">
            Back
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="19" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
        </a>
    </div>

    <div class="card-body">
        <div class="">
            <form asp-action="CreateOrEdit" method="post">

                <input asp-for="UserId" hidden="hidden" />
                <div class="row">

                    <div class="mb-3 col-6">
                        <label for="name" class="form-label">Organization</label>

                        @if (ViewData["Title"] is "Update User")
                        {
                            <input type="text" value="@Model.OrganizationName" disabled class="form-control" id="email" placeholder="Enter OrganizationName" />
                        }
                        else
                        {
                            <select class="form-control" asp-for="OrganizationId">
                                <option value="">Select Organization</option>
                                @foreach (var org in ViewBag.Orgs)
                                {
                                    <option value="@org.OrganizationId">@org.OrganizationName - @org.OwnerName</option>
                                }
                            </select>
                        }
                    </div>

                    <div class="mb-3 col-6">
                        <label for="name" class="form-label">Role</label>
                        <select class="form-control" asp-for="Role">
                            <option value="">Select Role</option>
                            <option value="Admin">Admin</option>
                            <option value="Employee">Employee</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-6">
                        <label for="email" class="form-label">Firstname</label>
                        <input type="text" asp-for="FirstName" class="form-control" id="email" placeholder="Enter Firstname" required />
                    </div>
                    <div class="mb-3 col-6">
                        <label for="email" class="form-label">Lastname</label>
                        <input type="text" asp-for="LastName" class="form-control" id="email" placeholder="Enter Lastname" required />
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-6">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Enter Email Address" required />
                        <small> Email should be a working email </small>
                    </div>
                    @if (ViewData["Title"] is "Update User")
                    {
                        <div class="mb-3 col-6">
                            <label for="email" class="form-label">Password</label>
                            <input disabled type="password" asp-for="Password" class="form-control" id="email" placeholder="Enter Password" required />
                            <small> Password must be strong and minimum 8 digit </small>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3 col-6">
                            <label for="email" class="form-label">Password</label>
                            <input type="password" asp-for="Password" class="form-control" id="email" placeholder="Enter Password" required />
                            <small> Password must be strong and minimum 8 digit </small>
                        </div>
                    }
                </div>
                <div class="row">
                    <div class="mb-3 col-6">
                        <label for="email" class="form-label">Phone</label>
                        <input type="text" asp-for="PhoneNumber" class="form-control" id="email" placeholder="Enter Phone Number" required />
                    </div>
                    <div class="mb-3 col-6">
                        <label for="email" class="form-label">Created At</label>
                        <input type="text" value="@DateTime.Now" readonly class="form-control" id="email" placeholder="Enter Phone Number" required />
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="@ViewData["button-color"] btn-block"> @ViewData["Title"] </button>
                </div>
            </form>
        </div>
    </div>

</div>