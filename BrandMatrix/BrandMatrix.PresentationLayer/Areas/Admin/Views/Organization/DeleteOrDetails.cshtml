@model Organizations
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div>
    <div class="text-center bg-secondary">
        <h1 class="display-4 mt-2 pt-2 mb-3 text-white"> @ViewData["Title"] Organizations </h1>
        <a asp-action="Manage" class="mb-3 btn btn-success">
            Back 
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="19" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
        </a>
    </div>

    <div class="card-body">
        <div class="">
            <form asp-action="DeleteOrDetails" method="post">

                <input asp-for="OrganizationId" hidden="hidden" />

                <div class="row">
                    <div class="col-6 mb-3">
                        <label for="name" class="form-label">Organization</label>
                        <input type="text" asp-for="OrganizationName" class="form-control" id="name" placeholder="Enter Organization's Name" required disabled />
                    </div>
                    <div class="mb-3 col-6">
                        <label for="name" class="form-label">Owner</label>
                        <input type="text" asp-for="OwnerName" class="form-control" id="name" placeholder="Enter Organization Owner's Name" required disabled />
                    </div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Enter Email Address" required disabled />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Phone</label>
                    <input type="text" asp-for="Phone" class="form-control" id="email" placeholder="Enter Phone" required disabled />
                </div>
                
                <div class="mb-3">
                    <label for="Website" class="form-label">Website</label>
                    <input type="text" asp-for="Website" class="form-control" id="Website" placeholder="Enter URL of Your Website" required disabled />
                </div>

                <div class="row">
                    <div class="mb-3 col-3">
                        <label for="Website" class="form-label">City</label>
                        <input type="text" asp-for="City" class="form-control" id="Website" placeholder="Enter City" required disabled />
                    </div>

                    <div class="mb-3 col-3">
                        <label for="Website" class="form-label">State</label>
                        <input type="text" asp-for="State" class="form-control" id="Website" placeholder="Enter State" required disabled />
                    </div>

                    <div class="mb-3 col-3">
                        <label for="Website" class="form-label">Country</label>
                        <input type="text" asp-for="Country" class="form-control" id="Website" placeholder="Enter State" required disabled />
                    </div>

                    <div class="mb-3 col-3">
                        <label for="Website" class="form-label">Zip code</label>
                        <input type="text" asp-for="ZipCode" class="form-control" id="Website" placeholder="Enter City" required disabled />
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="Website" class="form-label">Address</label>
                    <textarea class="form-control" asp-for="Address" id="Website" disabled required rows="2">
                    </textarea>
                </div>

                @if (ViewData["Title"] is "Delete")
                {
                    <div class="d-grid gap-2">
                        <button type="submit" class="@ViewData["button-color"] btn-block"> @ViewData["Title"] </button>
                    </div>
                }
                else
                {
                    <div class="d-grid gap-2">
                        <a asp-action="CreateOrEdit" asp-route-id="@Model.OrganizationId" class="@ViewData["button-color"] btn-block">
                            Edit
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </a>
                    </div>
                }

                
            </form>
        </div>
    </div>

</div>