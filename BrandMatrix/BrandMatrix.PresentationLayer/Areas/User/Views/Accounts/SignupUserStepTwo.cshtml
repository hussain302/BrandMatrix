@model Organizations
@{
    ViewData["Title"] = "Create Organization";
    Layout = "~/Areas/User/Views/Shared/_MinimalLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <div class="card shadow">
                <div class="card-header bg-white">
                    <h3 class="mb-0 text-center">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <!-- Step 1 -->
                    <div class="step1">
                        <h3>Step 2: Address Information</h3>
                        <form asp-action="SignupUserStepTwo" method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label">Address</label>
                                <input type="text" asp-for="Address" class="form-control" id="name" placeholder="Enter Address" required>
                            </div>
                            <div class="row">
                                <div class="mb-3 col-6">
                                    <label for="name" class="form-label">City</label>
                                    <input type="text" asp-for="City" class="form-control" id="name" placeholder="Enter City" required>
                                </div>

                                <div class="mb-3 col-6">
                                    <label for="name" class="form-label">State</label>
                                    <input type="text" asp-for="State" class="form-control" id="name" placeholder="Enter State" required>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="mb-3 col-6">
                                    <label for="name" class="form-label">Country</label>
                                    <input type="text" asp-for="Country" class="form-control" id="name" placeholder="Enter Country" required>
                                </div>

                                <div class="mb-3 col-6">
                                    <label for="name" class="form-label">Postal Code</label>
                                    <input type="number" min="1" asp-for="ZipCode" class="form-control" id="name" placeholder="Enter Postal Code" required>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-outline-dark btn-block"> Register </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>